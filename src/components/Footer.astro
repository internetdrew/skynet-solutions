---
import GitHubIcon from '../icons/social/Github.astro';
import LinkedInIcon from '../icons/social/LinkedIn.astro';
import XIcon from '../icons/social/X.astro';

const socialLinks = [
  {
    href: 'https://www.internetdrew.com/',
    icon: GitHubIcon,
  },
  {
    href: 'https://www.linkedin.com/in/internetdrew/',
    icon: LinkedInIcon,
  },
  {
    href: 'https://x.com/_internetdrew',
    icon: XIcon,
  },
];
---

<section class='py-16 md:py-20'>
  <div
    class='flex flex-col gap-4 items-center justify-center max-w-7xl mx-auto text-[#D1D9E6] md:flex-row md:justify-between'
  >
    <a href='/' class='text-lg'> Skynet Solutions </a>
    <div
      class='flex items-center gap-2 transition-all duration-300 group relative'
    >
      <span
        class='pulse w-2 h-2 rounded-full absolute top-1/2 -left-3 -translate-y-1/2 group-hover:opacity-100 opacity-0 bg-red-600 border border-red-600 group-hover:bg-green-600 group-hover:border-green-600'
      ></span>
      <a
        href='https://www.internetdrew.com/'
        class='text-sm underline-offset-4 group-hover:underline md:text-base'
        >An InternetDrew Experience</a
      >
    </div>
    <ul class='flex items-center gap-4'>
      {
        socialLinks.map(link => (
          <li>
            <a href={link.href} class='hover:text-red-600'>
              <link.icon />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .pulse {
    box-shadow: 0 0 8px 2px rgba(255, 0, 0, 0.8);
    animation: redPulse 2s infinite;
  }

  .group:hover .pulse {
    animation-name: greenPulse;
  }

  @keyframes redPulse {
    0% {
      opacity: 0.7;
      box-shadow: 0 0 8px 2px rgba(255, 0, 0, 0.8);
    }
    50% {
      opacity: 1;
      box-shadow: 0 0 16px 4px rgba(255, 0, 0, 1);
    }
    100% {
      opacity: 0.7;
      box-shadow: 0 0 8px 2px rgba(255, 0, 0, 0.8);
    }
  }

  @keyframes greenPulse {
    0% {
      opacity: 0.7;
      box-shadow: 0 0 8px 2px rgba(22, 163, 74, 0.8);
    }
    50% {
      opacity: 1;
      box-shadow: 0 0 16px 4px rgba(22, 163, 74, 1);
    }
    100% {
      opacity: 0.7;
      box-shadow: 0 0 8px 2px rgba(22, 163, 74, 0.8);
    }
  }
</style>
