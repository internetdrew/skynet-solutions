---
import { TESTIMONIALS } from '../constants';
import TestimonialCard from './TestimonialCard.astro';
---

<section class='px-4 text-[#D1D9E6] md:mt-16'>
  <div class='max-w-5xl mx-auto'>
    <h2 class='text-3xl text-center mx-auto max-w-xl md:text-5xl'>
      Satisfied Clients. Subjugated Markets.
    </h2>
    <div class='grid grid-cols-1 gap-4 md:grid-cols-2 md:mt-16'>
      <ul class='mt-10 flex flex-col gap-4'>
        {
          TESTIMONIALS.map((testimonial, index) => {
            if (index % 2 === 0)
              return <TestimonialCard testimonial={testimonial} />;
          })
        }
      </ul>
      <ul class='flex flex-col gap-4'>
        {
          TESTIMONIALS.map((testimonial, index) => {
            if (index % 2 !== 0)
              return <TestimonialCard testimonial={testimonial} />;
          })
        }
      </ul>
    </div>
  </div>
</section>
